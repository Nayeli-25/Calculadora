<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morado"
    tools:context=".MainActivity">

      <TextView
          android:layout_marginTop="20dp"
          android:id="@+id/tvOperacion"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center|right"
          android:text="0"
          android:textColor="@color/blanco"
          android:maxLength="54"
          android:textSize="100dp"
          app:autoSizeMaxTextSize="100dp"
          app:autoSizeMinTextSize="35dp"
          app:autoSizeStepGranularity="1dp"
          app:autoSizeTextType="uniform">
      </TextView>

    <LinearLayout
        android:paddingTop="160dp"
        android:layout_width ="match_parent"
        android:layout_height ="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">
      <LinearLayout
          android:layout_weight="1"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLimpiar"
            android:text="AC"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35dp"
            android:background="@color/gris"
            android:onClick="limpiar">
        </Button>
        <Button
            android:id="@+id/btnCambiar"
            android:text="+/−"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35dp"
            android:background="@color/gris"
            android:onClick="cambiarSigno">
        </Button>
        <Button
            android:id="@+id/btnPorcentaje"
            android:text="%"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35dp"
            android:background="@color/gris"
            android:onClick="porcentaje">
        </Button>
        <Button
            android:id="@+id/btnDiv"
            android:text="÷"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/lila"
            android:onClick="dividir">
        </Button>
      </LinearLayout>
      <LinearLayout
          android:layout_weight="2"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btnMult"
            android:text="×"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/lila"
            android:onClick="multiplicar">
        </Button>
      </LinearLayout>
      <LinearLayout
          android:layout_weight="2"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btnResta"
            android:text="−"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/lila"
            android:onClick="restar">
        </Button>
      </LinearLayout>
      <LinearLayout
          android:layout_weight="2"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btnSuma"
            android:text="+"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/lila"
            android:onClick="sumar">
        </Button>
      </LinearLayout>
      <LinearLayout
          android:layout_weight="2"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_weight="4"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btnPunto"
            android:text="."
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/gris"
            android:onClick="concatenar">
        </Button>
        <Button
            android:id="@+id/btnIgual"
            android:text="="
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:background="@color/morado"
            android:textColor="@color/blanco"
            android:onClick="igual">
        </Button>
      </LinearLayout>
    </LinearLayout>
</RelativeLayout>